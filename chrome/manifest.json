{
  "manifest_version": 2,
  "name": "Physical Web",
  "description": "Physical Web Browser",
  "version": "0.0.1",
  "app": {
    "background": {
      "scripts": ["js/EventEmitter.min.js", "js/peer-ssdp.js", "js/background.js"]
    }
  },
  "permissions": [
    "http://url-caster.appspot.com/*","alwaysOnTopWindows","contextMenus"
  ],
  "sockets": {
	"udp": {
		"send": "*:*",
		"bind": "*:*",
		"multicastMembership": ""
	}
  },
  "icons": { "16": "img/icon.png", "128": "img/icon.png" }
}